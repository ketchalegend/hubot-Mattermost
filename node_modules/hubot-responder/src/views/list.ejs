<% include header %>

<table class="table table-condensed">
<tr>
  <th class="col-xs-1"></th>
  <th class="col-xs-3">Match</th>
  <th class="col-xs-2">Only Match These Words</th>
  <th class="col-xs-2">Reply @ User</th>
  <th class="col-xs-4">Response(s)</th>
</tr>

<% for (i =0, len = messagelist.length; i < len; i++) { %>
  <tr>
    <td>
      <a href="./edit/<%= i %>" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">Edit</a>
    </td>
    <td>
      <%= messagelist[i].match %>
    </td>
    <td>
      <% if (messagelist[i].exact_match) { %>
        Yes
      <% } else { %>
        No
      <% } %>
    </td>
    <td>
      <% if (messagelist[i].at_user) { %>
        Yes
      <% } else { %>
        No
      <% } %>
    </td>
    <td>
      <ul class="list-unstyled">
      <% for (y = 0, leny = messagelist[i].responses.length; y < leny; y++) { %>
        <li>
          <%= messagelist[i].responses[y] %>
        </li>
      <% } %>
      </ul>
      <% } %>
  </tr>


</table>

<% include footer %>


